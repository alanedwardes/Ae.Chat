{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "outDir": "./dist/",
        "module": "es6",
        "target": "es5",
        "lib": [
            "ES2015",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ]
}